<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/versus_player"
        android:id="@+id/btnVerPla"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="123dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/versus_com"
        android:id="@+id/btnVerCom"
        android:layout_below="@+id/btnVerPla"
        android:layout_centerHorizontal="true"
        android:onClick="goToPick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instruct"
        android:id="@+id/btnInstruct"
        android:layout_below="@+id/btnVerCom"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/history"
        android:id="@+id/btnRecord"
        android:layout_below="@+id/btnInstruct"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
